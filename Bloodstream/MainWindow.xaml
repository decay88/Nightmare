<Window x:Class="Bloodstream.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <WrapPanel>
        <Button Name="Button_StartEngine" Content="Start" Click="Button_StartEngine_Click" />
        <Button Name="Button_StopEngine" Content="Stop" Click="Button_StopEngine_Click" />
        <Button Name="Button_TogglePauseEngine" Content="Pause" Click="Button_TogglePauseEngine_Click" />
    </WrapPanel>
</Window>
